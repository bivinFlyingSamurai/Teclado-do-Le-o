<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Action keys. -->
    <item android:drawable="@drawable/key_background_lxx_red" android:state_active="true" android:state_pressed="true" />
    <item android:drawable="@drawable/key_background_lxx_red" android:state_active="true" />

    <!-- Toggle keys. Use checkable/checked state. -->
    <item android:drawable="@drawable/key_background_lxx_red" android:state_checkable="true" android:state_checked="true" android:state_pressed="true" />
    <!--          android:drawable="@drawable/btn_keyboard_key_pressed_on_lxx_dark" />-->
    <item android:drawable="@drawable/key_background_lxx_red" android:state_checkable="true" android:state_pressed="true" />
    <item android:drawable="@drawable/key_background_lxx_red" android:state_checkable="true" android:state_checked="true" />
    <item android:drawable="@drawable/key_background_lxx_red" android:state_checkable="true" />

    <!-- Empty background keys. -->
    <item android:drawable="@drawable/key_background_pressed_lxx_dark" android:state_empty="true" android:state_pressed="true" />
    <item android:drawable="@android:color/transparent" android:state_empty="true" />

    <!-- Normal keys. -->
    <item android:drawable="@drawable/sn_key_green_background_pressed" android:state_pressed="true" />
    <item android:drawable="@drawable/key_background_lxx_red" />
</selector>
