<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.fortaleza.sociofortaleza.keyboard.fragment.MainFragment"
        android:label=""
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.fortaleza.sociofortaleza.keyboard.fragment.HomeFragment"
        android:label=""
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_languageFragment"
            app:destination="@id/languageFragment" />
        <action
            android:id="@+id/action_homeFragment_to_themeFragment"
            app:destination="@id/themeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_backgroundFragment"
            app:destination="@id/backgroundFragment" />
        <action
            android:id="@+id/action_homeFragment_to_termsFragment"
            app:destination="@id/termsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_privacyFragment"
            app:destination="@id/privacyFragment" />
        <action
            android:id="@+id/action_homeFragment_to_imprintFragment"
            app:destination="@id/imprintFragment" />
    </fragment>

    <fragment
        android:id="@+id/languageFragment"
        android:name="com.fortaleza.sociofortaleza.keyboard.fragment.LanguageFragment"
        android:label="Languages"
        tools:layout="@layout/fragment_language" />
    <fragment
        android:id="@+id/themeFragment"
        android:name="com.fortaleza.sociofortaleza.keyboard.fragment.ThemeFragment"
        android:label="Themes"
        tools:layout="@layout/fragment_theme" />

    <fragment
        android:id="@+id/backgroundFragment"
        android:name="com.fortaleza.sociofortaleza.keyboard.fragment.BackgroundFragment"
        android:label="Backgrounds"
        tools:layout="@layout/fragment_background" />

    <fragment
        android:id="@+id/imprintFragment"
        android:name="com.fortaleza.sociofortaleza.keyboard.fragment.ImprintFragment"
        android:label="Imprint"
        tools:layout="@layout/fragment_imprint" />

    <fragment
        android:id="@+id/privacyFragment"
        android:name="com.fortaleza.sociofortaleza.keyboard.fragment.PrivacyFragment"
        android:label="Privacy Policy"
        tools:layout="@layout/fragment_privacy" />

    <fragment
        android:id="@+id/termsFragment"
        android:name="com.fortaleza.sociofortaleza.keyboard.fragment.TermsFragment"
        android:label="Conditions"
        tools:layout="@layout/fragment_terms" />

</navigation>